extends ../layout

block title
  | Thêm sản phẩm mới

block content
  .container.mt-5
    h2.mb-4 Thêm sản phẩm mới
    form(action='/products', method='POST', enctype='multipart/form-data')
      .mb-3
        label.form-label(for='name') Tên sản phẩm
        input.form-control(type='text', name='name', required)

      .mb-3
        label.form-label(for='price') Giá
        input.form-control(type='number', name='price', min='1000', required)

      .mb-3
        label.form-label(for='stock') Số lượng tồn
        input.form-control(type='number', name='stock', min='0', required)

      .mb-3
        label.form-label(for='description') Mô tả
        input.form-control(type='text', name='description', required)

      .mb-3
        label.form-label(for='image') Ảnh sản phẩm
        input.form-control(type='file', name='image', accept='image/*', required)

      .mb-3
        label.form-label(for='category') Danh mục
        select.form-select(name='category', required)
          each category in categories
            option(value=category._id)= category.name

      button.btn.btn-success(type='submit') Thêm sản phẩm