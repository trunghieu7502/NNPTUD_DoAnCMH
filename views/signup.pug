extends layout

block title
  | Đăng Ký

block content
  .row.justify-content-center
    .col-md-6
      .card.shadow
        .card-body
          h3.text-center.mb-4 Đăng Ký
          form(action='/auth/signup', method='POST')
            .mb-3
              label.form-label(for='username') Tên người dùng
              input.form-control(type='text', name='username', required)
            .mb-3
              label.form-label(for='email') Email
              input.form-control(type='email', name='email', required)
            .mb-3
              label.form-label(for='phone') Số điện thoại
              input.form-control(type='tel', name='phone', pattern='[0-9]{10,11}', placeholder='VD: 0987654321', required)
            .mb-3
              label.form-label(for='password') Mật khẩu
              input.form-control(type='password', name='password', required)
            .mb-3
              label.form-label(for='confirm_password') Xác nhận mật khẩu
              input.form-control(type='password', name='confirm_password', required)
            button.btn.btn-primary.w-100(type='submit') Đăng Ký
          .text-center.mt-3
            span Đã có tài khoản? 
            a(href='/auth/login') Đăng nhập