doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title
      block title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")
    style.
      .navbar-brand img {
        height: 60px;
      }
      .dropdown-menu-end {
        right: 0;
        left: auto;
      }
      .dropdown-toggle::after {
        display: none;
      }

  body
    header.sticky-top
      .bg-primary.py-2.text-white
        .container-fluid.d-flex.justify-content-between.align-items-center
          a.navbar-brand.ms-3(href='/')
            img(src='/images/Beyblade_X_Logo.png', alt='Logo')

          .d-flex.align-items-center.me-3
            a.btn.btn-outline-light.me-3(href='/carts')
              i.fas.fa-shopping-cart.me-1
              | Giỏ Hàng

            if !currentUser
              a.btn.btn-outline-light.me-2(href='/auth/login') Đăng Nhập
              a.btn.btn-outline-light(href='/auth/signup') Đăng Ký
            else
              .dropdown
                button.btn.btn-outline-light.dropdown-toggle(type="button", id="dropdownUser", data-bs-toggle="dropdown", aria-expanded="false")
                  i.fas.fa-user-circle.me-1
                  | #{currentUser.username}
                ul.dropdown-menu.dropdown-menu-end(aria-labelledby="dropdownUser")
                  if currentUser.roleName === 'admin'
                    li
                      a.dropdown-item(href='/admin') Quản lý Admin
                  li
                    a.dropdown-item(href='/profile') Hồ sơ cá nhân
                  li
                    a.dropdown-item(href='/orders/history') Lịch sử đơn hàng
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href='/auth/logout') Đăng Xuất

    main.container.mt-5.pt-5
      block content

    footer.text-center.text-muted.mt-auto.p-3.border-top
      | © 2025 - Website bán mô hình

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
