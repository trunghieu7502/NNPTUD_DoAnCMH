extends layout

block title
  | Đổi mật khẩu

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow
          .card-header.bg-primary.text-white
            h4.mb-0 Đổi mật khẩu
          .card-body
            if error
              .alert.alert-danger= error
            if success
              .alert.alert-success= success
            form(action='/profile/change-password', method='POST')
              .mb-3
                label.form-label(for='oldPassword') Mật khẩu hiện tại
                input.form-control(type='password', name='oldPassword', id='oldPassword', required)

              .mb-3
                label.form-label(for='newPassword') Mật khẩu mới
                input.form-control(type='password', name='newPassword', id='newPassword', required)

              .mb-3
                label.form-label(for='confirmPassword') Xác nhận mật khẩu mới
                input.form-control(type='password', name='confirmPassword', id='confirmPassword', required)

              button.btn.btn-success.w-100(type='submit') Cập nhật mật khẩu
